extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Activate Account 
  form(id='signup-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='activationCode') Activation Code 
      .col-md-7
        input.form-control(name='token', id='activationCode', placeholder='Activation Code', autofocus, required)
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | Activate Account
